<article>
    <form id= "deals" method="POST" action="/feedback">
        <div class="input-field">
            <label>Comment</label>
            <input type="text" name="feedback" id="feedback" size="50" placeholder="Feedback...">
        </div>
        <button type="submit">Submit Feedback</button>
    </form>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>

    <script> 
        
        $('#deals').submit(function(){
        var comment = $('#feedback').val();
       
        $.ajax({
            type: "POST",
            url: '/create',
            data: { 
                        comment:comment
                    },
            success: function(data, status){
                console.log(data);              
            }
        }); 
        return false;
    }); 